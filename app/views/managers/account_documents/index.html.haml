- content_for :meta_description, 'this is the meta_description'
- content_for :meta_keywords, 'this is the meta_keywords'
- content_for :breadcrumb do
  %div
    %ul.breadcrumb
      %li
        = link_to managers_root_path do 
          %i.glyphicon.glyphicon-chevron-right
          %span Dashboard
      %li
        = link_to managers_accounts_path do 
          %i.glyphicon.glyphicon-home
          %span Accounts
      %li
        = link_to edit_managers_account_path(account) do 
          %i.glyphicon.glyphicon-home
          %span= account.name
      %li
        = link_to '#' do 
          %i.glyphicon.glyphicon-list-alt
          %span Documents

.row
  .box.col-md-12
    %p
      = link_to new_managers_account_account_document_path(account), class: 'btn btn-info' do
        %i.glyphicon.glyphicon-edit.icon-white
        Add Document
    %p
      %a.btn.btn-setting.btn-success{:href => "#"}
        %i.glyphicon.glyphicon-zoom-in
        Add Filter
      %a.btn.btn-setting.btn-success{:href => "#"}
        %i.glyphicon.glyphicon-minus-sign
        Clear Filters
.row
  .box.col-md-12
    .box-inner
      .box-header.well{"data-original-title" => ""}
        %h2
          %i.glyphicon.glyphicon-star-empty
          Documents
      .box-content
        %table.table.table-striped.table-bordered.bootstrap-datatable.datatable
          %thead
            %th Name
            %th Type
            %th Description
            %th  
          %tbody
            - account_documents.each do |document|
              %tr
                %td= link_to document.name, document.file_url, target: '_blank'
                %td= document.document_type
                %td= document.description
                %td{:align => "right", :nowrap => "nowrap"}
                  = link_to edit_managers_account_account_document_path(account, document), class: 'btn btn-info' do
                    %i.glyphicon.glyphicon-edit.icon-white
                    Edit
                  = link_to managers_account_account_document_path(account, document), class: 'btn btn-danger', :confirm => "Are you sure?",  method: :delete do
                    %i.glyphicon.glyphicon-trash.icon-white
                    Delete

